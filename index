<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <script>
    // Get the phone number from the URL parameter
    const params = new URLSearchParams(window.location.search);
    let number = params.get('number');

    // Redirect to the tel: link with the formatted number
    if (number) {
      window.location.href = `tel:${number}`;
      setTimeout(() => {
        window.close();
    } 1000);
else {
      document.body.innerHTML = '<p>Invalid number.</p>';
    }
  </script>
  <title>Redirecting...</title>
</head>
<body>
</body>
</html>
